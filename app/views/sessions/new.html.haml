= form_for @user, url: signin_path, html: { class: "signin-form" } do |f|
  - f.object.errors.full_messages.each do |error|
    .errors
      = error
  %div
    = f.label :user_name
    = f.text_field :user_name
  %div
    = f.label :password
    = f.password_field :password
  %div
    = f.submit "Login"
